@model IEnumerable<WebForumMVC.Models.ViewModels.TopicViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Choose the topic</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                <p>Article number</p>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(
                    item.Title,
                     "Index",
                     "Articles",
                     new WebForumMVC.Models.QueryParam.QueryParamsViewModel { TopicId = item.Id },
                     null
                     )
                </td>
            </tr>
            <tr>
                <td>
                   <p>@item.ArticleNumber</p>
                </td>
            </tr>
        }
    </tbody>
</table>
