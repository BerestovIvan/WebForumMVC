@model IEnumerable<WebForumMVC.Models.ViewModels.ArticleViewModel>

@if (!Model.Any())
{
    <p>You don't have any articles yet </p>
    <p>You want to create an article? <a asp-action="Create">Click here</a></p>
}
else
{
    @foreach (var item in Model)
    {
        <p>@Html.DisplayFor(modelItem => item.Title)</p>
        <textarea>@Html.DisplayFor(modelItem => item.Text)</textarea>
        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
    }
}